# ========================
# BEETLE BACKEND ENVIRONMENT CONFIGURATION
# ========================
# Copy this file to .env and update the values with your actual configuration

# ========================
# SERVER CONFIGURATION
# ========================
PORT=3001
NODE_ENV=development

# ========================
# VECTOR DATABASE CONFIGURATION
# ========================
# Qdrant Cloud Configuration
QDRANT_URL=https://your-qdrant-cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# Qdrant Local Configuration (alternative)
QDRANT_URL=localhost
QDRANT_PORT=6333

# ========================
# GITHUB OAUTH CONFIGURATION
# ========================
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# ========================
# CORS CONFIGURATION
# ========================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# ========================
# JWT CONFIGURATION
# ========================
JWT_SECRET=your_super_secret_jwt_key_change_in_production_minimum_32_chars
JWT_EXPIRES_IN=7d

# ========================
# DATABASE CONFIGURATION
# ========================
# Local JSON storage path
DB_PATH=./data/beetle_db.json

# ========================
# RATE LIMITING
# ========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================
# AI CONFIGURATION
# ========================
# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# ========================
# CACHE CONFIGURATION
# ========================
CACHE_TTL=3600

# ========================
# AI PIPELINE SETTINGS
# ========================
# Document processing limits
AI_MAX_DOCUMENTS=1000
AI_BATCH_SIZE=32

# Model configurations
AI_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
AI_CHAT_MODEL=gemini-2.0-flash

# ========================
# AI WEB SCRAPER SETTINGS
# ========================
AI_MAX_PAGES=10
AI_MAX_DEPTH=2
AI_SCRAPER_TIMEOUT=30000

# ========================
# AI FORMAT AGENT SETTINGS
# ========================
AI_MIN_CONTENT_LENGTH=50
AI_MAX_CONTENT_LENGTH=100000
AI_REMOVE_HTML=true
AI_DETECT_LANGUAGE=true
AI_GENERATE_SUMMARY=true

# ========================
# AI EMBEDDING SETTINGS
# ========================
AI_COLLECTION_NAME=documents

# ========================
# AI RETRIEVAL SETTINGS
# ========================
AI_USE_HYBRID_SEARCH=true
AI_KEYWORD_WEIGHT=0.3
AI_VECTOR_WEIGHT=0.7

# ========================
# AI PROMPT REWRITER SETTINGS
# ========================
AI_MAX_CONTEXT_LENGTH=4000
AI_MAX_SOURCES=5
AI_INCLUDE_CITATIONS=true
AI_INCLUDE_CONFIDENCE=true

# ========================
# AI ANSWERING SETTINGS
# ========================
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_TOP_K=40

# ========================
# EXTERNAL SERVICE INTEGRATION
# ========================
# Python backend server URL
PYTHON_SERVER=http://localhost:8000